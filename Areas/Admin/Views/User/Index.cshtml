@using Microsoft.AspNetCore.Identity

@{
    var userRoles = ViewBag.UserRoles as Dictionary<AppUseModel, List<IdentityRole>>;
    ViewData["title"] = "Quyền";
}
<h3>Danh sách quyền</h3>
<a asp-action="Create" asp-controller="User">Phân quyền</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Tên quyền</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in userRoles.Keys)
        {
            <tr>
                <td>@item.UserName</td>
                <td>
                    <ul>
                        @foreach (var role in userRoles[item])
                        {
                            <li>@role.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>