@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Sản phẩm";
}
<h3>Danh sách sản phẩm</h3>
<a asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Hình</th>
            <th scope="col">slug</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Thương hiệu</th>
            <th scope="col">Quản lý</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@Html.Raw(@item.Description)</td>
                <td><img src ="~/media/products/@item.Image" width="120px"></img></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit"  class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action ="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>