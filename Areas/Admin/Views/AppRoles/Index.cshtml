@using Microsoft.AspNetCore.Identity
@{
    ViewData["title"] = "Quyền";
}
<h3>Danh sách quyền</h3>
<a asp-action="Create" asp-controller="AppRoles">Thêm quyền</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">id</th>
            <th scope="col">Tên quyền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Name</th>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="AppRoles" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="AppRoles" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>